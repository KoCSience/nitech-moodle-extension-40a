{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "lib": [
      "DOM",
      "ESNext",
      "deno.window"
    ]
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["dist/", "*.scss"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["dist/", "*.scss"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "proseWrap": "always",
      "singleQuote": true,
      "useTabs": false
    }
  },
  "tasks": {
    "build": "deno run --allow-run --allow-read --allow-write --allow-env ./build.ts",
    "dev": "deno run --allow-run --allow-read --allow-write --allow-env ./build.ts --dev",
    "watch": "deno run --allow-run --allow-read --allow-write --allow-env ./build.ts --dev --watch",
    "clear": "rm -rf dist/ && rm -rf cache/"
  }
}